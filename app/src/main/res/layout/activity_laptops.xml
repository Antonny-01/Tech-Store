                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1099"
                        android:textColor="#2563eb" />
                </LinearLayout>

                <!-- Laptop 9 -->
                <LinearLayout
                    android:id="@+id/laptop9_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/laptop9" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Razer Blade 15"
                        android:textStyle="bold"
                        android:textColor="#111"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1899"
                        android:textColor="#2563eb" />
                </LinearLayout>

                <!-- Laptop 10 -->
                <LinearLayout
                    android:id="@+id/laptop10_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/laptop10" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alienware m15 R6"
                        android:textStyle="bold"
                        android:textColor="#111"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$2099"
                        android:textColor="#2563eb" />
                </LinearLayout>
            </GridLayout>

            <!-- Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#086DF6"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="© 2025 Tech Store. All rights reserved."
                    android:textColor="#050505"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>